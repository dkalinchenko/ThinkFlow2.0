# Server Configuration
PORT=5000                 # Use 10000 on Render
NODE_ENV=development      # Use 'production' on Render

# Database Configuration
# For local development:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thinkflow         # Previously optimind
DB_USER=postgres
DB_PASSWORD=postgres

# For Render deployment, use the values provided by Render PostgreSQL service:
# DB_HOST=your-render-postgres-host.render.com
# DB_PORT=5432
# DB_NAME=thinkflow
# DB_USER=your_render_db_user
# DB_PASSWORD=your_render_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here  # Use a strong random value in production
JWT_EXPIRATION=24h

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000    # Update with your frontend URL on Render

# Email Configuration (for invitations) - Optional for basic setup
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=your_password
EMAIL_FROM=noreply@thinkflow.com 