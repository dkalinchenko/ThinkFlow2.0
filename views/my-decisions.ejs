<div class="row">
  <div class="col-md-12">
    <h2>My Decisions</h2>
    <p>Here are all the decisions you've saved to your account.</p>
    
    <div class="mb-3">
      <a href="/dashboard" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
      <a href="/" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Decision
      </a>
    </div>
    
    <% if (decisions && decisions.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-primary">
            <tr>
              <th>Decision Name</th>
              <th>Created</th>
              <th>Last Updated</th>
              <th>Criteria</th>
              <th>Alternatives</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% decisions.forEach(function(decision) { %>
              <tr>
                <td><%= decision.name %></td>
                <td><%= new Date(decision.createdAt).toLocaleDateString() %></td>
                <td><%= new Date(decision.updatedAt).toLocaleDateString() %></td>
                <td><%= decision.criteria.length %></td>
                <td><%= decision.alternatives.length %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/decision/<%= decision.id %>" class="btn btn-info">
                      <i class="fas fa-eye"></i> View
                    </a>
                    <form action="/decision/<%= decision.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this decision?');">
                      <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        <p>You haven't saved any decisions yet.</p>
        <a href="/" class="btn btn-primary mt-2">Create Your First Decision</a>
      </div>
    <% } %>
  </div>
</div> 