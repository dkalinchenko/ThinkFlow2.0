<%- include('partials/header', {title}) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Error</h3>
        </div>
        <div class="card-body">
          <h4 class="card-title"><%= message %></h4>
          <% if (error && error.status) { %>
            <p>Status code: <%= error.status %></p>
          <% } %>
          <div class="alert alert-secondary mt-3">
            <p>Something went wrong with your request. You can try the following:</p>
            <ul>
              <li>Return to the <a href="/">homepage</a></li>
              <li>Try refreshing the page</li>
              <li>Check if you have the correct permissions for this resource</li>
            </ul>
          </div>
          <% if (error && error.stack && error.stack.length > 0) { %>
            <div class="mt-4">
              <h5>Technical Details:</h5>
              <pre class="bg-light p-3 rounded"><code><%= error.stack %></code></pre>
            </div>
          <% } %>
        </div>
        <div class="card-footer">
          <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Go Back
          </a>
          <a href="/" class="btn btn-primary">
            <i class="fas fa-home"></i> Home
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %> 