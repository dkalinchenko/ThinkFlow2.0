<!-- Blog Page -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-4 text-center mb-5">Blog</h1>
            <p class="lead text-center text-muted mb-5">
                Insights and articles about decision-making frameworks, analysis techniques, and practical applications.
            </p>

            <% if (posts && posts.length > 0) { %>
                <div class="row">
                    <% posts.forEach(post => { %>
                        <div class="col-12 mb-4">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h2 class="h4 card-title">
                                        <a href="/blog/<%= post.slug %>" class="text-decoration-none text-dark">
                                            <%= post.title %>
                                        </a>
                                    </h2>
                                    <div class="text-muted small mb-2">
                                        <% if (post.date) { %>
                                            <span class="me-3">
                                                <i class="far fa-calendar-alt me-1"></i>
                                                <%= new Date(post.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                            </span>
                                        <% } %>
                                        <% if (post.author) { %>
                                            <span>
                                                <i class="far fa-user me-1"></i>
                                                <%= post.author %>
                                            </span>
                                        <% } %>
                                    </div>
                                    <p class="card-text mb-3"><%= post.excerpt %></p>
                                    <a href="/blog/<%= post.slug %>" class="btn btn-outline-primary">Read More</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center text-muted">
                    <p>No blog posts available at the moment.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Newsletter Signup -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h2>Stay Updated</h2>
                <p class="mb-4">Get the latest decision-making tips and insights delivered to your inbox.</p>
                <form class="row g-3 justify-content-center">
                    <div class="col-auto">
                        <input type="email" class="form-control" placeholder="Enter your email">
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-light">Subscribe</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section> 